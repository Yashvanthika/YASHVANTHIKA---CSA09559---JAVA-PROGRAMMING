public class DayOfWeekPrinter {

    public static void main(String[] args) {
        // Define an array of days in a week
        String[] daysOfWeek = {"Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"};

        // Total days in a non-leap year
        int totalDays = 365;

        // Print the day of the week for each day of the year
        for (int day = 1; day <= totalDays; day++) {
            // Determine the day of the week using modulo operation
            int dayOfWeekIndex = (day - 1) % 7;
            String dayOfWeek = daysOfWeek[dayOfWeekIndex];

            // Print the day of the week for the current day
            System.out.println("Day " + day + ": " + dayOfWeek);
        }
    }
}
